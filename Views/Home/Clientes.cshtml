@{
    ViewData["Title"] = "Cliente";//Substituir molde por nome da tela
    <link href="~/css/Cliente.css" rel="stylesheet" media="all">
}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <div class="d-flex align-items-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/747/747376.png"
                         alt="Ícone de Cadastro"
                         width="30"
                         height="30"
                         class="me-2" />
                    <h4 class="mb-0">Cadastro de clientes</h4>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="nome" class="form-label">Nome</label>
                            <input type="text"
                                   class="form-control"
                                   id="nome"
                                   value="Julio Cesar Augusto" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   value="juliocesar@hotmail.com" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="telefone" class="form-label">Telefone</label>
                            <input type="tel"
                                   class="form-control"
                                   id="telefone"
                                   value="(18) 99735-2165" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="cpf-cnpj" class="form-label">CPF/CNPJ</label>
                            <input type="text"
                                   class="form-control"
                                   id="cpf-cnpj"
                                   value="421.865.248-23" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="data-nascimento" class="form-label">Data de nascimento</label>
                            <input type="date"
                                   class="form-control"
                                   id="data-nascimento"
                                   value="1986-05-24" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="genero" class="form-label">Gênero</label>
                            <select class="form-select" id="genero">
                                <option selected>Masculino</option>
                                <option>Feminino</option>
                                <option>Outro</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="rua" class="form-label">Rua</label>
                            <input type="text"
                                   class="form-control"
                                   id="rua"
                                   value="Rua Paranaguá, 385" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="bairro" class="form-label">Bairro</label>
                            <input type="text"
                                   class="form-control"
                                   id="bairro"
                                   value="Centro" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select" id="estado">
                                <option selected>SP</option>
                                <option>RJ</option>
                                <option>MG</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="cidade" class="form-label">Cidade</label>
                            <input type="text"
                                   class="form-control"
                                   id="cidade"
                                   value="Assis" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="cep" class="form-label">CEP</label>
                            <input type="text"
                                   class="form-control"
                                   id="cep"
                                   value="19802-385" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-lg"></i>
                        </button>
                        <button type="reset" class="btn btn-danger">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>