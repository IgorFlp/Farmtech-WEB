@{
    ViewData["Title"] = "Fornecedores";//Substituir molde por nome da tela
    <link href="~/css/Fornecedor.css" rel="stylesheet" media="all">
    <link href="~/css/site.css" rel="stylesheet" media="all">
}

<h2 style="margin-left:1.5rem;">@ViewData["Title"]</h2>

<button class="incluir btn btn-light border border-dark" style="margin-left:1.5rem;" onclick="window.location.href='@Url.Action("FornecedoresNovo", "Home")'"></button>
<button class="excluir btn btn-light border border-dark" style="margin-left:1.5rem;"></button>
<button class="alterar btn btn-light border border-dark" style="margin-left:1.5rem;" onclick="window.location.href='@Url.Action("FornecedoresAlterar", "Home")'"></button>
<div id="tbContainer" class="container border border-dark " style="width:auto; height:100%;margin:1.5rem; padding: 0px; border-radius:10px;">
<table id="fornecedorTabela"  class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>CNPJ</th>
            <th>Razão social</th>
            <th>Nome Fantasia</th>
            <th>Telefone</th>
            <th>Email</th>          
            <th>Rua</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>CEP</th>
        </tr>
    </thead>
    <tbody>
            <!-- Linhas serão adicionadas via JS -->
    </tbody>
</table>
</div>
<script src="~/js/Fornecedor.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>