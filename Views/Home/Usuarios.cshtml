@{
    ViewData["Title"] = "Usuarios";
}

<h2 style="margin-left:1.5rem;">@ViewData["Title"]</h2>

<div class="container d-flex flex-fill flex-row" style="width: auto; margin-left:24px;margin-bottom:1rem; padding: 0px;">
    <div class="element d-flex flex-column" style="margin-right: 1rem;">
        <label class="text-dark">Login</label>
        <input type="text"
               class="form-control"
               id="txtUsuario"
               placeholder="Digite o login do usuario"
               disabled
               style="height:3rem;" /></input>
    </div>

    <div class="element d-flex flex-column" style="margin-right: 1rem;">
        <label class="text-dark">Nome</label>
        <input type="text"
               class="form-control"
               id="txtNome"
               placeholder="Digite o nome do usuario"
               disabled
               style="height:3rem;" /></input>
    </div>

    <div class="element d-flex flex-column" style="margin-right: 1rem;">
        <label class="text-dark">Cargo</label>
        <select disabled id="slcCargo" style="height:3rem;">
            <option selected disabled></option>
            <option>Estoquista</option>
            <option>Produtor</option>
            <option>Vendedor</option>
            <option>Gerente de estoque</option>
            <option>Gerente de produção</option>
            <option>Gerente de vendas</option>
            <option>Gerente Geral</option>
        </select>
    </div>


    <div class="element d-flex flex-column" style="margin-right: 1rem;">
        <label class="text-dark">Senha</label>
        <input type="password"
               class="form-control"
               id="txtSenha"
               placeholder="Digite a senha do usuario"
               disabled
               style="height:3rem;" /></input>
    </div>

    <div class="element d-flex flex-column" style="margin-right: 1rem;">
        <label class="text-dark ">Salvar</label>
        <button type="button" class="salvar btn btn-light border border-dark"
                id="btnSalvar"
                disabled
                style="height:3rem; width:3rem;" /></button>
    </div>
</div>

<button class="incluir btn btn-light border border-dark" style="margin-left:1.5rem;"></button>
<button class="excluir btn btn-light border border-dark" style="margin-left:1.5rem;"></button>
<button class="alterar btn btn-light border border-dark" style="margin-left:1.5rem;"></button>
<div id="tbContainer" class="container border border-dark " style="width:auto; height:100%;margin:1.5rem; padding: 0px; border-radius:10px;">
    <table id="usuarioTabela" class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Login</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>ID</th>
            </tr>
        </thead>
        <tbody>
            <!-- Linhas serão adicionadas via JS -->
        </tbody>
    </table>
</div>
<script src="~/js/Usuario.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>